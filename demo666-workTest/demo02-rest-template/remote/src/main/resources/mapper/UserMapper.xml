<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxl.remote.mapper.UserMapper">

    <select id="queryOne" resultType="com.hxl.remote.domain.entity.User">
        select *
        from t_user
        where name = #{u.name}
    </select>

    <select id="getScore" resultType="com.hxl.remote.domain.entity.Score">
        select *
        from t_score
        <where>
            <if test="uName != null">
                username = #{uName}
            </if>

            <if test="sName != null">
                and score_name = #{sName}
            </if>
        </where>
    </select>
</mapper>